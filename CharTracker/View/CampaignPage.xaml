<Page x:Class="RetiraTracker.View.CampaignPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RetiraTracker.View"
      mc:Ignorable="d"
      DataContext="{Binding Terminal, Source={StaticResource Locator}}">

    <Grid DataContext="{Binding Campaign}" Margin="4,4,16,4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ListView ItemsSource="{Binding SheetList}" SelectedItem="{Binding SelectedSheet}" SelectionMode="Single" Grid.Column="0" Style="{StaticResource AngledList}" />

        <Frame Grid.Column="1" Source="{Binding SheetSource}" Margin="8,0,0,0" />
    </Grid>
</Page>

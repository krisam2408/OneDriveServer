<Page x:Class="RetiraTracker.View.SheetTemplates.CODDarkAgesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RetiraTracker.View.SheetTemplates"
      xmlns:controls="clr-namespace:RetiraTracker.View.UserControls"
      mc:Ignorable="d">

    <ScrollViewer HorizontalContentAlignment="Center">
        <Border Background="{StaticResource Light}" Padding="8">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Terminal.Campaign.CampaignsName, Source={StaticResource Locator}}" HorizontalAlignment="Center" FontSize="24" Style="{StaticResource SheetText}" FontWeight="Bold" />

                <Border Background="{StaticResource DarkLight}" CornerRadius="8" Padding="8,4" Margin="0,16,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0" Margin="0,4">
                            <TextBlock Text="Name:" Style="{StaticResource SheetText}" Width="64" />
                            <TextBox Text="{Binding Terminal.Campaign.SheetData.CharacterName, Source={StaticResource Locator}}" Style="{StaticResource SheetEntry}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="1" Margin="0,4">
                            <TextBlock Text="Age:" Style="{StaticResource SheetText}" Width="64" />
                            <TextBox Text="" Style="{StaticResource SheetEntry}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0" Margin="0,4">
                            <TextBlock Text="Virtue:" Style="{StaticResource SheetText}" Width="64" />
                            <TextBox Text="" Style="{StaticResource SheetEntry}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1" Margin="0,4">
                            <TextBlock Text="Vice:" Style="{StaticResource SheetText}" Width="64" />
                            <TextBox Text="" Style="{StaticResource SheetEntry}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="0" Margin="0,4">
                            <TextBlock Text="Player:" Style="{StaticResource SheetText}" Width="64" />
                            <TextBlock Text="(PlayerName)" Style="{StaticResource SheetText}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="1" Margin="0,4">
                            <TextBlock Text="Concept:" Style="{StaticResource SheetText}" Width="64" />
                            <TextBox Text="" Style="{StaticResource SheetEntry}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Background="{StaticResource DarkLight}" CornerRadius="8" Padding="8" Margin="0,16,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Column="1" Grid.Row="0" BorderThickness="0,2" BorderBrush="{StaticResource Dark}" Padding="2">
                            <TextBlock Text="Attributes" HorizontalAlignment="Center" Foreground="{StaticResource Dark}" FontSize="24" FontFamily="Consolas" />
                        </Border>

                        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="1" Margin="0,4">
                            <TextBlock Text="Intelligence:" Style="{StaticResource SheetText}" Width="96" />
                            <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Intelligence, Source={StaticResource Locator}}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="2" Margin="0,4">
                            <TextBlock Text="Wits:" Style="{StaticResource SheetText}" Width="96" />
                            <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Wits, Source={StaticResource Locator}}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="3" Margin="0,4">
                            <TextBlock Text="Resolve:" Style="{StaticResource SheetText}" Width="96" />
                            <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Resolve, Source={StaticResource Locator}}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1" Margin="0,4">
                            <TextBlock Text="Strength:" Style="{StaticResource SheetText}" Width="96" />
                            <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Strength, Source={StaticResource Locator}}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="2" Margin="0,4">
                            <TextBlock Text="Dexterity:" Style="{StaticResource SheetText}" Width="96" />
                            <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Dexterity, Source={StaticResource Locator}}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="3" Margin="0,4">
                            <TextBlock Text="Stamina:" Style="{StaticResource SheetText}" Width="96" />
                            <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Stamina, Source={StaticResource Locator}}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="1" Margin="0,4">
                            <TextBlock Text="Presence:" Style="{StaticResource SheetText}" Width="96" />
                            <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Presence, Source={StaticResource Locator}}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="2" Margin="0,4">
                            <TextBlock Text="Manipulation:" Style="{StaticResource SheetText}" Width="96" />
                            <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Manipulation, Source={StaticResource Locator}}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="3" Margin="0,4">
                            <TextBlock Text="Composure:" Style="{StaticResource SheetText}" Width="96" />
                            <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Composure, Source={StaticResource Locator}}" />
                        </StackPanel>
                        
                    </Grid>
                </Border>

                <Grid Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Border Grid.Column="0" Grid.Row="0" BorderThickness="0,0,1.5,0" BorderBrush="{StaticResource Dark}">
                        <Border Background="{StaticResource DarkLight}" CornerRadius="8" Padding="32,8" Margin="0,0,8,0">
                            <Border BorderThickness="0,2" BorderBrush="{StaticResource Dark}" Padding="2">
                                <TextBlock Text="Skills" HorizontalAlignment="Center" Foreground="{StaticResource Dark}" FontSize="24" FontFamily="Consolas" />
                            </Border>
                        </Border>
                    </Border>

                    <Border Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" Background="{StaticResource DarkLight}" CornerRadius="8" Padding="80,8" Margin="8,0,0,0">
                        <Border BorderThickness="0,2" BorderBrush="{StaticResource Dark}" Padding="2">
                            <TextBlock Text="Other Traits" HorizontalAlignment="Center" Foreground="{StaticResource Dark}" FontSize="24" FontFamily="Consolas" />
                        </Border>
                    </Border>

                    <Border Grid.Column="0" Grid.Row="1" BorderThickness="0,0,1.5,0" BorderBrush="{StaticResource Dark}" Padding="0,0,8,0">
                        <StackPanel Margin="0,8,0,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Mental" HorizontalAlignment="Center" Foreground="{StaticResource Dark}" FontFamily="Consolas" FontSize="18" VerticalAlignment="Bottom" />
                                <TextBlock Text="(-3 unskilled)" HorizontalAlignment="Center" Foreground="{StaticResource Dark}" FontFamily="Consolas" FontSize="12" VerticalAlignment="Bottom" Margin="8,0,0,0" FontStyle="Italic" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Academics:" Style="{StaticResource SheetText}" Width="104" VerticalAlignment="Center" />
                                <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Academics, Source={StaticResource Locator}}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Enigmas:" Style="{StaticResource SheetText}" Width="104" VerticalAlignment="Center" />
                                <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Enigmas, Source={StaticResource Locator}}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Crafts:" Style="{StaticResource SheetText}" Width="104" VerticalAlignment="Center" />
                                <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Crafts, Source={StaticResource Locator}}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Investigation:" Style="{StaticResource SheetText}" Width="104" VerticalAlignment="Center" />
                                <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Investigation, Source={StaticResource Locator}}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Medicine:" Style="{StaticResource SheetText}" Width="104" VerticalAlignment="Center" />
                                <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Medicine, Source={StaticResource Locator}}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Occult:" Style="{StaticResource SheetText}" Width="104" VerticalAlignment="Center" />
                                <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Occult, Source={StaticResource Locator}}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Politics:" Style="{StaticResource SheetText}" Width="104" VerticalAlignment="Center" />
                                <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Politics, Source={StaticResource Locator}}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Science:" Style="{StaticResource SheetText}" Width="104" VerticalAlignment="Center" />
                                <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Science, Source={StaticResource Locator}}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                                <TextBlock Text="Physical" HorizontalAlignment="Center" Foreground="{StaticResource Dark}" FontFamily="Consolas" FontSize="18" VerticalAlignment="Bottom" />
                                <TextBlock Text="(-1 unskilled)" HorizontalAlignment="Center" Foreground="{StaticResource Dark}" FontFamily="Consolas" FontSize="12" VerticalAlignment="Bottom" Margin="8,0,0,0" FontStyle="Italic" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Athletics:" Style="{StaticResource SheetText}" Width="104" VerticalAlignment="Center" />
                                <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Athletics, Source={StaticResource Locator}}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Brawl:" Style="{StaticResource SheetText}" Width="104" VerticalAlignment="Center" />
                                <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Brawl, Source={StaticResource Locator}}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Ride:" Style="{StaticResource SheetText}" Width="104" VerticalAlignment="Center" />
                                <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Ride, Source={StaticResource Locator}}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Archery:" Style="{StaticResource SheetText}" Width="104" VerticalAlignment="Center" />
                                <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Archery, Source={StaticResource Locator}}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Larceny:" Style="{StaticResource SheetText}" Width="104" VerticalAlignment="Center" />
                                <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Larceny, Source={StaticResource Locator}}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Stealth:" Style="{StaticResource SheetText}" Width="104" VerticalAlignment="Center" />
                                <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Stealth, Source={StaticResource Locator}}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Survival:" Style="{StaticResource SheetText}" Width="104" VerticalAlignment="Center" />
                                <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Survival, Source={StaticResource Locator}}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Weaponry:" Style="{StaticResource SheetText}" Width="104" VerticalAlignment="Center" />
                                <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Weaponry, Source={StaticResource Locator}}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                                <TextBlock Text="Social" HorizontalAlignment="Center" Foreground="{StaticResource Dark}" FontFamily="Consolas" FontSize="18" VerticalAlignment="Bottom" />
                                <TextBlock Text="(-1 unskilled)" HorizontalAlignment="Center" Foreground="{StaticResource Dark}" FontFamily="Consolas" FontSize="12" VerticalAlignment="Bottom" Margin="8,0,0,0" FontStyle="Italic" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Animal Ken:" Style="{StaticResource SheetText}" Width="104" VerticalAlignment="Center" />
                                <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.AnimalKen, Source={StaticResource Locator}}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Empathy:" Style="{StaticResource SheetText}" Width="104" VerticalAlignment="Center" />
                                <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Empathy, Source={StaticResource Locator}}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Expression:" Style="{StaticResource SheetText}" Width="104" VerticalAlignment="Center" />
                                <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Expression, Source={StaticResource Locator}}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Intimidation:" Style="{StaticResource SheetText}" Width="104" VerticalAlignment="Center" />
                                <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Intimidation, Source={StaticResource Locator}}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Persuasion:" Style="{StaticResource SheetText}" Width="104" VerticalAlignment="Center" />
                                <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Persuasion, Source={StaticResource Locator}}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Socialize:" Style="{StaticResource SheetText}" Width="104" VerticalAlignment="Center" />
                                <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Socialize, Source={StaticResource Locator}}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Streetwise:" Style="{StaticResource SheetText}" Width="104" VerticalAlignment="Center" />
                                <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Streetwise, Source={StaticResource Locator}}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Subterfuge:" Style="{StaticResource SheetText}" Width="104" VerticalAlignment="Center" />
                                <controls:DotNumberControl Number="{Binding Terminal.Campaign.SheetData.Subterfuge, Source={StaticResource Locator}}" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <StackPanel Grid.Column="1" Grid.Row="1" Margin="0,8,0,0">
                        <TextBlock Text="Merits" HorizontalAlignment="Center" Foreground="{StaticResource Dark}" FontFamily="Consolas" FontSize="18" VerticalAlignment="Bottom" />
                            
                    </StackPanel>

                </Grid>
            </StackPanel>
        </Border>
    </ScrollViewer>
</Page>

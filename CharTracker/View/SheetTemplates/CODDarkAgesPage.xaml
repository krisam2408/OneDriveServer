<UserControl x:Class="RetiraTracker.View.SheetTemplates.CODDarkAgesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RetiraTracker.View.SheetTemplates"
      xmlns:controls="clr-namespace:RetiraTracker.View.UserControls"
      xmlns:core="clr-namespace:RetiraTracker.Core"
      mc:Ignorable="d"
      DataContext="{Binding Source={StaticResource Locator}, Path=Terminal}">

    <Border Background="{StaticResource Light}" DataContext="{Binding Campaign}" Padding="8,8,8,32">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding CampaignsName}" HorizontalAlignment="Center" FontSize="24" Style="{StaticResource CoDText}" FontWeight="Bold" />

            <!-- Data -->
            <Border Background="{StaticResource DarkLight}" CornerRadius="8" Padding="8,4" Margin="0,16,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0" Margin="0,4">
                        <TextBlock Text="Name:" Style="{StaticResource CoDText}" Width="72" />
                        <TextBox Text="{Binding CurrentSheet.CharacterName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource CoDEntry}" core:TextBehaviour.TextChangedCommand="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="1" Margin="0,4">
                        <TextBlock Text="Age:" Style="{StaticResource CoDText}" Width="72" />
                        <TextBox Text="{Binding CurrentSheet.Age, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource CoDEntry}" core:TextBehaviour.TextChangedCommand="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0" Margin="0,4">
                        <TextBlock Text="Virtue:" Style="{StaticResource CoDText}" Width="72" />
                        <TextBox Text="{Binding CurrentSheet.Virtue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource CoDEntry}" core:TextBehaviour.TextChangedCommand="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1" Margin="0,4">
                        <TextBlock Text="Vice:" Style="{StaticResource CoDText}" Width="72" />
                        <TextBox Text="{Binding CurrentSheet.Vice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource CoDEntry}" core:TextBehaviour.TextChangedCommand="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="0" Margin="0,4">
                        <TextBlock Text="Player:" Style="{StaticResource CoDText}" Width="72" />
                        <TextBlock Text="{Binding CurrentSheet.PlayerName}" Style="{StaticResource CoDText}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="1" Margin="0,4">
                        <TextBlock Text="Concept:" Style="{StaticResource CoDText}" Width="72" />
                        <TextBox Text="{Binding CurrentSheet.Concept, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource CoDEntry}" core:TextBehaviour.TextChangedCommand="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Attributes -->
            <Border Background="{StaticResource DarkLight}" CornerRadius="8" Padding="8" Margin="0,16,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border Grid.Column="1" Grid.Row="0" BorderThickness="0,2" BorderBrush="{StaticResource Dark}" Padding="2">
                        <TextBlock Text="Attributes" Style="{StaticResource CoDTitle}" />
                    </Border>

                    <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="1" Margin="0,4">
                        <TextBlock Text="Intelligence:" Style="{StaticResource CoDText}" Width="120" />
                        <controls:DotNumberControl MinNumber="1" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Intelligence, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.IntelligenceBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="2" Margin="0,4">
                        <TextBlock Text="Wits:" Style="{StaticResource CoDText}" Width="120" />
                        <controls:DotNumberControl MinNumber="1" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Wits, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.WitsBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="3" Margin="0,4">
                        <TextBlock Text="Resolve:" Style="{StaticResource CoDText}" Width="120" />
                        <controls:DotNumberControl MinNumber="1" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Resolve, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.ResolveBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1" Margin="0,4">
                        <TextBlock Text="Strength:" Style="{StaticResource CoDText}" Width="120" />
                        <controls:DotNumberControl MinNumber="1" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Strength, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.StrengthBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="2" Margin="0,4">
                        <TextBlock Text="Dexterity:" Style="{StaticResource CoDText}" Width="120" />
                        <controls:DotNumberControl MinNumber="1" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Dexterity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.DexterityBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="3" Margin="0,4">
                        <TextBlock Text="Stamina:" Style="{StaticResource CoDText}" Width="120" />
                        <controls:DotNumberControl MinNumber="1" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Stamina, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.StaminaBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="1" Margin="0,4">
                        <TextBlock Text="Presence:" Style="{StaticResource CoDText}" Width="120" />
                        <controls:DotNumberControl MinNumber="1" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Presence, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.PresenceBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="2" Margin="0,4">
                        <TextBlock Text="Manipulation:" Style="{StaticResource CoDText}" Width="120" />
                        <controls:DotNumberControl MinNumber="1" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Manipulation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.ManipulationBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="3" Margin="0,4">
                        <TextBlock Text="Composure:" Style="{StaticResource CoDText}" Width="120" />
                        <controls:DotNumberControl MinNumber="1" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Composure, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.ComposureBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                    </StackPanel>

                </Grid>
            </Border>

            <!-- Main Body -->
            <Grid Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Border Grid.Column="0" Grid.Row="0" BorderThickness="0,0,1.5,0" BorderBrush="{StaticResource Dark}">
                    <Border Background="{StaticResource DarkLight}" CornerRadius="8" Padding="32,8" Margin="0,0,8,0">
                        <Border BorderThickness="0,2" BorderBrush="{StaticResource Dark}" Padding="2">
                            <TextBlock Text="Skills" Style="{StaticResource CoDTitle}" />
                        </Border>
                    </Border>
                </Border>

                <Border Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" Background="{StaticResource DarkLight}" CornerRadius="8" Padding="80,8" Margin="8,0,0,0">
                    <Border BorderThickness="0,2" BorderBrush="{StaticResource Dark}" Padding="2">
                        <TextBlock Text="Other Traits" Style="{StaticResource CoDTitle}" />
                    </Border>
                </Border>

                <!-- First Column -->
                <Border Grid.Column="0" Grid.Row="1" BorderThickness="0,0,1.5,0" BorderBrush="{StaticResource Dark}" Padding="0,0,8,0">
                    <StackPanel Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Mental" Style="{StaticResource CoDTitle}" />
                            <TextBlock Text="(-3 unskilled)" HorizontalAlignment="Center" Foreground="{StaticResource Dark}" FontFamily="Consolas" FontSize="12" VerticalAlignment="Bottom" Margin="8,0,0,0" FontStyle="Italic" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="Academics:" Style="{StaticResource CoDText}" Width="104" VerticalAlignment="Center" />
                            <controls:DotNumberControl MinNumber="0" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Academics, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.AcademicsBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="Enigmas:" Style="{StaticResource CoDText}" Width="104" VerticalAlignment="Center" />
                            <controls:DotNumberControl MinNumber="0" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Enigmas, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.EnigmasBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="Crafts:" Style="{StaticResource CoDText}" Width="104" VerticalAlignment="Center" />
                            <controls:DotNumberControl MinNumber="0" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Crafts, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.CraftsBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="Investigation:" Style="{StaticResource CoDText}" Width="104" VerticalAlignment="Center" />
                            <controls:DotNumberControl MinNumber="0" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Investigation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.InvestigationBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="Medicine:" Style="{StaticResource CoDText}" Width="104" VerticalAlignment="Center" />
                            <controls:DotNumberControl MinNumber="0" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Medicine, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.MedicineBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="Occult:" Style="{StaticResource CoDText}" Width="104" VerticalAlignment="Center" />
                            <controls:DotNumberControl MinNumber="0" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Occult, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.OccultBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="Politics:" Style="{StaticResource CoDText}" Width="104" VerticalAlignment="Center" />
                            <controls:DotNumberControl MinNumber="0" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Politics, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.PoliticsBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="Science:" Style="{StaticResource CoDText}" Width="104" VerticalAlignment="Center" />
                            <controls:DotNumberControl MinNumber="0" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Science, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.ScienceBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                            <TextBlock Text="Physical" Style="{StaticResource CoDTitle}" />
                            <TextBlock Text="(-1 unskilled)" HorizontalAlignment="Center" Foreground="{StaticResource Dark}" FontFamily="Consolas" FontSize="12" VerticalAlignment="Bottom" Margin="8,0,0,0" FontStyle="Italic" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="Athletics:" Style="{StaticResource CoDText}" Width="104" VerticalAlignment="Center" />
                            <controls:DotNumberControl MinNumber="0" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Athletics, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.AthleticsBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="Brawl:" Style="{StaticResource CoDText}" Width="104" VerticalAlignment="Center" />
                            <controls:DotNumberControl MinNumber="0" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Brawl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.BrawlBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="Ride:" Style="{StaticResource CoDText}" Width="104" VerticalAlignment="Center" />
                            <controls:DotNumberControl MinNumber="0" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Ride, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.RideBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="Archery:" Style="{StaticResource CoDText}" Width="104" VerticalAlignment="Center" />
                            <controls:DotNumberControl MinNumber="0" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Archery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.ArcheryBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="Larceny:" Style="{StaticResource CoDText}" Width="104" VerticalAlignment="Center" />
                            <controls:DotNumberControl MinNumber="0" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Larceny, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.LarcenyBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="Stealth:" Style="{StaticResource CoDText}" Width="104" VerticalAlignment="Center" />
                            <controls:DotNumberControl MinNumber="0" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Stealth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.StealthBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="Survival:" Style="{StaticResource CoDText}" Width="104" VerticalAlignment="Center" />
                            <controls:DotNumberControl MinNumber="0" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Survival, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.SurvivalBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="Weaponry:" Style="{StaticResource CoDText}" Width="104" VerticalAlignment="Center" />
                            <controls:DotNumberControl MinNumber="0" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Weaponry, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.WeaponryBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                            <TextBlock Text="Social" Style="{StaticResource CoDTitle}" />
                            <TextBlock Text="(-1 unskilled)" HorizontalAlignment="Center" Foreground="{StaticResource Dark}" FontFamily="Consolas" FontSize="12" VerticalAlignment="Bottom" Margin="8,0,0,0" FontStyle="Italic" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="Animal Ken:" Style="{StaticResource CoDText}" Width="104" VerticalAlignment="Center" />
                            <controls:DotNumberControl MinNumber="0" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.AnimalKen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.AnimalKenBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="Empathy:" Style="{StaticResource CoDText}" Width="104" VerticalAlignment="Center" />
                            <controls:DotNumberControl MinNumber="0" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Empathy, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.EmpathyBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="Expression:" Style="{StaticResource CoDText}" Width="104" VerticalAlignment="Center" />
                            <controls:DotNumberControl MinNumber="0" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Expression, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.ExpressionBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="Intimidation:" Style="{StaticResource CoDText}" Width="104" VerticalAlignment="Center" />
                            <controls:DotNumberControl MinNumber="0" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Intimidation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.IntimidationBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="Persuasion:" Style="{StaticResource CoDText}" Width="104" VerticalAlignment="Center" />
                            <controls:DotNumberControl MinNumber="0" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Persuasion, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.PersuasionBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="Socialize:" Style="{StaticResource CoDText}" Width="104" VerticalAlignment="Center" />
                            <controls:DotNumberControl MinNumber="0" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Socialize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.SocializeBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="Streetwise:" Style="{StaticResource CoDText}" Width="104" VerticalAlignment="Center" />
                            <controls:DotNumberControl MinNumber="0" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Streetwise, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.StreetwiseBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="Subterfuge:" Style="{StaticResource CoDText}" Width="104" VerticalAlignment="Center" />
                            <controls:DotNumberControl MinNumber="0" MaxNumber="10" AcceptsBonuses="True" Number="{Binding CurrentSheet.Subterfuge, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding CurrentSheet.SubterfugeBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Second Column -->
                <StackPanel Grid.Column="1" Grid.Row="1" Margin="0,8,0,0">
                    <!-- Merits -->
                    <StackPanel Margin="8,0">
                        <TextBlock Text="Merits" Style="{StaticResource CoDTitle}" />
                        <ListView x:Name="MeritList" ItemsSource="{Binding CurrentSheet.Merits, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource CoDList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <controls:CircleButtonControl Diameter="16" Command="{Binding Terminal.Campaign.Commands.RemoveIntValueCommand, Source={StaticResource Locator}}" BorderBackground="{StaticResource Rot}" Data="M242.72 256l100.07-100.07c12.28-12.28 12.28-32.19 0-44.48l-22.24-22.24c-12.28-12.28-32.19-12.28-44.48 0L176 189.28 75.93 89.21c-12.28-12.28-32.19-12.28-44.48 0L9.21 111.45c-12.28 12.28-12.28 32.19 0 44.48L109.28 256 9.21 356.07c-12.28 12.28-12.28 32.19 0 44.48l22.24 22.24c12.28 12.28 32.2 12.28 44.48 0L176 322.72l100.07 100.07c12.28 12.28 32.2 12.28 44.48 0l22.24-22.24c12.28-12.28 12.28-32.19 0-44.48L242.72 256z" CustomParameter="{x:Reference MeritList}" Margin="0,0,8,0" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                                        <TextBox Text="{Binding Key, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource CoDEntry}" core:TextBehaviour.TextChangedCommand="{Binding Terminal.Campaign.UpdateSheetCommand, Source={StaticResource Locator}}" Margin="0,0,8,0" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                                        <controls:DotNumberControl MinNumber="0" MaxNumber="5" AcceptsBonuses="False" Number="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding Terminal.Campaign.UpdateSheetCommand, Source={StaticResource Locator}}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                                    </StackPanel>
                                </DataTemplate>

                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0" Margin="0,4">
                            <TextBlock Text="Name:" Style="{StaticResource SheetText}" Width="72" />
                            <TextBox Text="{Binding CharacterName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SheetEntry}" core:TextBehaviour.TextChangedCommand="{Binding Source={StaticResource Locator}, Path=Terminal.Campaign.UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="1" Margin="0,4">
                            <TextBlock Text="Age:" Style="{StaticResource SheetText}" Width="72" />
                            <TextBox Text="{Binding Age, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SheetEntry}" core:TextBehaviour.TextChangedCommand="{Binding Source={StaticResource Locator}, Path=Terminal.Campaign.UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0" Margin="0,4">
                            <TextBlock Text="Virtue:" Style="{StaticResource SheetText}" Width="72" />
                            <TextBox Text="{Binding Virtue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SheetEntry}" core:TextBehaviour.TextChangedCommand="{Binding Source={StaticResource Locator}, Path=Terminal.Campaign.UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1" Margin="0,4">
                            <TextBlock Text="Vice:" Style="{StaticResource SheetText}" Width="72" />
                            <TextBox Text="{Binding Vice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SheetEntry}" core:TextBehaviour.TextChangedCommand="{Binding Source={StaticResource Locator}, Path=Terminal.Campaign.UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="0" Margin="0,4">
                            <TextBlock Text="Player:" Style="{StaticResource SheetText}" Width="72" />
                            <TextBlock Text="{Binding PlayerName}" Style="{StaticResource SheetText}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="1" Margin="0,4">

                                <controls:DotNumberControl Number="{Binding Ride, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Bonus="{Binding RideBonus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ValueChanged="{Binding Source={StaticResource Locator}, Path=Terminal.Campaign.UpdateSheetCommand}" IsEnabled="{Binding Source={StaticResource Locator}, Path=Terminal.Navigation.IsEnabled}" />
                            </StackPanel>


    <ScrollViewer HorizontalContentAlignment="Center" Margin="0,0,0,16">
        <Border Background="{StaticResource Light}" Padding="8,8,8,32">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Source={StaticResource Locator}, Path=Terminal.Campaign.CampaignsName}" HorizontalAlignment="Center" FontSize="24" Style="{StaticResource SheetText}" FontWeight="Bold" />

